{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist/main",
		"baseUrl": ".",
		"newLine": "LF",
		"paths": {
			"*": [
				"node_modules/*",
			]
		}
	},
	"exclude": [],
	"include": [
		"renderer/main/**/*"
	]
}